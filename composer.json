{
    "type": "project",
    "description": "Tool for \"Play a game you won on SG\" events. All progress of these events is being tracked here",
    "authors": [
        {"name": "Ardiffaz"},
        {"name": "insideone", "role": "maintainer"},
        {"name": "MouseWithBeer"}
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "doctrine/doctrine-fixtures-bundle": "^3.1",
        "fabpot/goutte": "^3.2",
        "fresh/doctrine-enum-bundle": "^6.3",
        "fxp/security-bundle": "dev-master",
        "fxp/doctrine-extra": "dev-master",
        "fxp/doctrine-extensions": "dev-master",
        "guzzlehttp/guzzle": "^6.3",
        "knojector/steam-authentication-bundle": "dev-master",
        "opis/json-schema": "^1.0",
        "sensio/framework-extra-bundle": "^5.3",
        "symfony-bundles/json-request-bundle": "^2.0",
        "symfony/console": "4.3.*",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/http-client": "4.3.*",
        "symfony/lock": "4.3.*",
        "symfony/mailer": "4.3.*",
        "symfony/mailgun-mailer": "4.3.*",
        "symfony/orm-pack": "^1.0",
        "symfony/property-info": "4.3.*",
        "symfony/security-bundle": "4.3.*",
        "symfony/serializer": "4.3.*",
        "symfony/templating": "4.3.*",
        "symfony/translation": "4.3.*",
        "symfony/twig-bundle": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "from-scratch": [
            "composer install",
            "console doctrine:schema:drop --force",
            "console doctrine:schema:update --force",
            "console doctrine:fixtures:load --quiet"
        ],
        "up": [
            "composer install",
            "console doctrine:schema:update --force"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    },
    "repositories": {
        "knojector/steam-authentication-bundle": {
            "type": "path",
            "url": "./vendor_fork/knojector/steam-authentication-bundle",
            "options": {
                "symlink": true
            }
        }
    }
}
